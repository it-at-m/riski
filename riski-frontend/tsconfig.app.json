{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "noUncheckedSideEffectImports": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "tsBuildInfoFile": "./cache/tsconfig.app.tsbuildinfo"
  },
  "exclude": [
    "tests/**/*"
  ],
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "declarations.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ]
}
